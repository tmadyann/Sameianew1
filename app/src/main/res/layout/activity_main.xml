<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gray1"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Login">

  <TextView
      android:layout_marginTop="50dp"
      android:layout_gravity="center"
      android:textSize="30dp"
      android:layout_width="wrap_content"
      android:textStyle="bold"
      android:layout_height="wrap_content"
      android:text="תודה שבחרתם אותנו"
      ></TextView>
    <EditText

        android:id="@+id/id1"
        android:layout_marginTop="30dp"
      android:layout_gravity="center"
        android:textSize="25dp"
        android:textColorHint="@color/black"
        android:layout_width="wrap_content"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:hint="תעודת זהות"
        ></EditText>

  <EditText
      android:id="@+id/password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:hint="סיסמה"
      android:textColorHint="@color/black"
      android:textSize="25dp"></EditText>
  <Button
      android:layout_marginTop="30dp"
      android:id="@+id/loginb"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:textSize="30dp"
      android:textStyle="bold"
      android:textColor="@color/black"
      android:drawableRight="@drawable/baseline_login_24"
      android:backgroundTint="@color/white"
      android:text="כניסה"></Button>
  <TextView
      android:id="@+id/newaccount"
      android:layout_marginTop="10dp"
      android:textSize="20dp"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:text="יצירת חשבון"></TextView>
  <LinearLayout
      android:layout_width="wrap_content"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
  <ImageView
      android:layout_width="190dp"
      android:layout_height="match_parent"
      android:src="@drawable/tr12"></ImageView>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:src="@drawable/tr13"></ImageView>
</LinearLayout>
</LinearLayout>